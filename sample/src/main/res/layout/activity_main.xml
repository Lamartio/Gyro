<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/doorDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/openDoor"
            app:layout_constraintEnd_toStartOf="@+id/openDoor" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:ellipsize="start" android:singleLine="true"/>
    <Button
            android:text="@string/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openDoor"
            app:layout_constraintEnd_toStartOf="@+id/closeDoor" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/closeDoor"/>
    <Button
            android:text="@string/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeDoor"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopRinging"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/closeDoor"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bellDescription"
            android:ellipsize="start" android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/startRinging"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/startRinging" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startRinging" app:layout_constraintEnd_toStartOf="@+id/stopRinging"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/stopRinging"/>

</androidx.constraintlayout.widget.ConstraintLayout>